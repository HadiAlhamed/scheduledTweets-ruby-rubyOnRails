<h1>Sign Up </h1>

<%= form_with  url: sign_up_path, model: @user do |form|  %>
    <%= render partial: "shared/form_errors", locals: { form: form } %>

    <div class ="mb-3">
        <%= form.label :Email , class: "form-label" %>
        <%= form.email_field :email, placeholder: "JoeDoe@gmail.com" , class: "form-control" %>
    </div>

    <div class ="mb-3">
            <%= form.label :Password , class: "form-label" %>

        <%= form.password_field :password, placeholder: "Password" , class: "form-control" %>
    </div>
    <div class ="mb-3">
            <%= form.label :password_confirmation , class: "form-label" %>

        <%= form.password_field :password_confirmation, placeholder: "Password" , class: "form-control" %>
    </div>
    <div class ="mb-3">
            <%= form.submit "Sign Up" , class: "btn btn-primary" %>
    </div>
<%end%>
